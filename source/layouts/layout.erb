<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman Reveal.js" %></title>

    <link rel="stylesheet" href="<%= config[:revealjs_path] %>/css/reveal.css">
    <link rel="stylesheet" href="<%= config[:revealjs_path] %>/css/theme/<%= current_page.data.theme || 'black' %>.css">

    <!-- Theme used for syntax highlighting of code -->
    <link rel="stylesheet" href="<%= config[:revealjs_path] %>/lib/css/<%= current_page.data.syntax_theme || 'zenburn' %>.css">

    <!-- Printing and PDF exports -->
    <script>
      var link = document.createElement( 'link' );
      link.rel = 'stylesheet';
      link.type = 'text/css';
      link.href = window.location.search.match( /print-pdf/gi ) ? '<%= config[:revealjs_path] %>/css/print/pdf.css' : '<%= config[:revealjs_path] %>/css/print/paper.css';
      document.getElementsByTagName( 'head' )[0].appendChild( link );
    </script>

    <%= stylesheet_link_tag :application, relative: true %>
  </head>
  <body class="<%= page_classes %>">
    <div class="reveal">
      <div class="slides">
        <%= yield %>
      </div>
    </div>

    <script src="<%= config[:revealjs_path] %>/lib/js/head.min.js"></script>
    <script src="<%= config[:revealjs_path] %>/js/reveal.js"></script>
    <%= javascript_include_tag :application, relative: true %>
  </body>
</html>
